<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.unbegrenzt.fisicab.f_prom">

    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="10"
        android:useDefaultMargins="true">

        <ImageView
            android:layout_columnSpan="4"
            android:layout_gravity="left"
            android:src="@drawable/fprom"
            android:layout_width="match_parent"
            android:layout_height="140dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fuerza Promedio (F)"
            android:textSize="24sp"
            android:textColor="#000000"
            android:id="@+id/textView2"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fuerza promedio (F) ="
            android:textSize="18sp"
            android:textColor="#056100"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_gravity="left"
            android:ems="5"
            android:id="@+id/txt_fuerzaprom"
            android:layout_column="1"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delta t (t_f - t_i) ="
            android:textSize="18sp"
            android:textColor="#000dff"
            android:id="@+id/textView3"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/txt_delta_t"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="delta v (v_f - v_i) ="
            android:textColor="#FF0000"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/txt_delta_v"
            android:layout_column="1"
            android:layout_row="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="masa ="
            android:textColor="#023be4"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/txt_masa2"
            android:layout_column="1"
            android:layout_row="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="¿Qué desea conocer?"
            android:textColor="#016e1f"
            android:textSize="18sp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_fprom"
            android:layout_row="7"
            android:layout_column="0"
            android:theme="@style/AppTheme"
            android:elevation="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Calcular"
            android:id="@+id/btn_calc_f_prom"
            android:background="#ff5900"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_columnSpan="4"
            android:layout_gravity="left"
            android:text="Solución:"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView android:layout_columnSpan="4"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:text=""
            android:textSize="19sp"
            android:id="@+id/soluc3"/>

    </GridLayout>

</ScrollView>
